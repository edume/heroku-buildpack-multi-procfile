#!/usr/bin/env bash

set -e

# Define the directories passed to the script
BUILD_DIR=$1
ENV_DIR=$2

echo "BUILD DARIO - BUILD_DIR: $BUILD_DIR"
echo "BUILD DARIO - ENV_DIR: $ENV_DIR"


# Source the compile script
source "$(dirname "$0")/compile" "$BUILD_DIR" "$CACHE_DIR" "$ENV_DIR"

# Additional build steps can be added here, for example:
# - Running additional setup scripts
# - Performing any pre-deploy optimizations

echo "Build script completed successfully"
